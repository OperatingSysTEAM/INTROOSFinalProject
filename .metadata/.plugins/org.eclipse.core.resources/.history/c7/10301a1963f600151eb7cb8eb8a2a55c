package GUI;

import javax.swing.JFrame;
import javax.swing.JPanel;
import java.awt.BorderLayout;
import javax.swing.JScrollPane;
import javax.swing.JTextField;
import javax.swing.JTextPane;
import net.miginfocom.swing.MigLayout;
import javax.swing.JTextArea;

public class cmdGUI {
	private JFrame mainJFrame = new JFrame("INTROOS");
	private JPanel mainPanel = new JPanel();
	private JScrollPane mainScroll = new JScrollPane();
	private JTextPane mainTxt = new JTextPane();
	private JTextField txtInput = new JTextField();
	
	public cmdGUI(){
		mainJFrame.setResizable(false);
		mainJFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		mainJFrame.setTitle("INTROOS ");
		
		mainJFrame.getContentPane().add(mainPanel);
		mainPanel.setLayout(new MigLayout("", "[20.00][500.00,grow][150.00][20.00]", "[20.00][300.00]"));
		
		JTextArea textArea = new JTextArea();
		mainPanel.add(textArea, "cell 1 1,grow");
	}
}
